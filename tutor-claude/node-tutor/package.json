{
  "name": "nestjs-learning-project",
  "version": "1.0.0",
  "description": "NestJS 단계별 학습 프로젝트 - 초급부터 고급까지",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/main.ts",
    "start:dev": "nodemon --watch src --exec ts-node src/main.ts",
    "start:basic": "ts-node src/1-basic/main.ts",
    "start:intermediate": "ts-node src/2-intermediate/main.ts",
    "start:advanced": "ts-node src/3-advanced/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": ["nestjs", "tutorial", "clean-architecture", "ddd"],
  "author": "NestJS Tutor",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^11.1.13",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}
